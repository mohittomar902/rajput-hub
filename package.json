{
    "name": "rajput-youth",
    "version": "1.0.0",
    "description": "An app that manages user-related data, provides APIs for creating and updating user data, and facilitates interaction between them.",
    "main": "index.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "build": "npm run build:prod",
        "build:prod": "tsc && tsc-watch --onSuccess \"npm run build:copy\"",
        "build:copy": "cp -r dist/* build/",
        "deploy": "firebase deploy --only hosting"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.3",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "firebase": "^11.1.0",
        "firebase-admin": "^13.0.2",
        "firebase-functions": "^6.3.2",
        "jsonwebtoken": "^9.0.2",
        "nodemailer": "^6.9.16"
    },
    "devDependencies": {
        "@eslint/js": "^9.18.0",
        "eslint": "^9.18.0",
        "eslint-plugin-import": "^2.31.0",
        "globals": "^15.14.0",
        "nodemon": "^3.1.9",
        "tsc-watch": "^6.2.1",
        "typescript": "^5.7.3"
    }
}
